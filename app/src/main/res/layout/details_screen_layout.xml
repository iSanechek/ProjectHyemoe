<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/details_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_primary_color"
    android:visibility="visible">

    <com.isanechek.wallpaper.view.widgets.DragLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/drag_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:bototmExtraIndicatorHeight="@dimen/card_extra_height"
        app:bottomDragVisibleHeight="@dimen/card_bottom_info_height">

        <FrameLayout
            android:id="@+id/details_control_container"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="bottom"
            android:background="@color/my_primary_dark_color">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|top"
                android:layout_marginStart="@dimen/dp16"
                android:layout_marginTop="@dimen/dp16"
                android:textSize="16sp"
                tools:text="title"
                android:visibility="gone"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/details_install_button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="@dimen/dp8"
                android:layout_marginTop="@dimen/dp8"
                android:layout_marginEnd="@dimen/dp8"
                android:elevation="@dimen/dp0"
                android:text="install"
                android:layout_gravity="top|center"
                android:textColor="@color/title_color"
                android:textSize="18sp"
                android:textAllCaps="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="@drawable/install_button_bg"
                tools:ignore="HardcodedText"
                android:visibility="visible"/>

            <com.yandex.mobile.ads.AdView
                android:id="@+id/details_screen_ads_widget"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:visibility="gone"
                tools:visibility="visible"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/details_photo_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.github.chrisbanes.photoview.PhotoView
                android:id="@+id/details_wallpaper"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:transitionName="@string/wall_image"
                android:contentDescription="@string/wallpaper_details_description"
                tools:src="@tools:sample/avatars"
                tools:visibility="gone"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="@dimen/dp8"
                android:background="@android:color/transparent">
                <com.isanechek.wallpaper.view.widgets.AnimatedImageView
                    android:id="@+id/details_swipe_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    tools:src="@drawable/ic_expand_more_white_24dp"
                    tools:ignore="ContentDescription" />

                <com.isanechek.wallpaper.view.widgets.AnimatedTextView
                    android:id="@+id/details_swipe_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    tools:text="swipe up"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center|bottom"
                    tools:ignore="HardcodedText"
                    android:visibility="gone"/>
            </FrameLayout>
        </FrameLayout>
    </com.isanechek.wallpaper.view.widgets.DragLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@android:color/transparent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/detailsCloseButtonContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.isanechek.wallpaper.view.widgets.ArcView
                android:id="@+id/detailArcView"
                android:layout_width="85dp"
                android:layout_height="63dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <com.isanechek.wallpaper.view.widgets.AnimatedImageView
                android:id="@+id/detailArcImage"
                android:layout_width="28dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginBottom="2dp"
                android:layout_marginStart="22dp"
                app:srcCompat="@drawable/ic_close_white_24dp"
                android:contentDescription="@string/arc_view_image"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.50" />

            <ProgressBar
                android:id="@+id/detailToolbarProgress"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="8dp"
                android:indeterminate="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="gone"
                tools:visibility="visible"/>
        </android.support.constraint.ConstraintLayout>
    </FrameLayout>
</FrameLayout>