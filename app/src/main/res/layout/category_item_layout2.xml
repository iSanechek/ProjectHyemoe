<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/category_item_root"
    android:layout_marginStart="@dimen/dp16"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="@dimen/dp16">
    <TextView
        android:id="@+id/category_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="36sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:textColor="@color/my_primary_text_color"
        tools:text="Category"/>

    <TextView
        android:id="@+id/category_item_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="@dimen/dp16"
        android:background="@drawable/item_backgrond"
        android:gravity="center"
        android:paddingTop="@dimen/dp2"
        android:paddingStart="@dimen/dp4"
        android:paddingBottom="@dimen/dp4"
        android:paddingEnd="@dimen/dp4"
        android:rotation="-35"
        android:text="new"
        android:textColor="@color/my_text_color"
        android:textSize="12sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/category_item_date_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp8"
        android:layout_marginTop="@dimen/dp4"
        android:layout_gravity="end|top"
        android:textSize="10sp"
        android:textColor="@color/my_secondary_text_color"
        tools:text="последне обновление 18.03.2018"
        tools:ignore="SmallSp" />
</FrameLayout>