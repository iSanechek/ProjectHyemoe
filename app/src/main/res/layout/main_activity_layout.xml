<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="end">
    <android.support.v7.widget.CardView
        android:id="@+id/mainView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="0dp"
        app:cardCornerRadius="0dp"
        app:cardUseCompatPadding="false"
        tools:context=".view.main.MainActivity">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:id="@+id/main_screen_fragment_contaner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/my_primary_color"
                android:visibility="visible"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top">

                <View
                    android:id="@+id/main_screen_toolbar_helper_view"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:background="#4f2e87"
                    android:layout_gravity="top"
                    android:alpha="0"
                    tools:alpha="1"/>
                <FrameLayout
                    android:id="@+id/main_screen_custom_title_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginTop="52dp"
                    android:alpha="0"
                    tools:alpha="1"
                    android:background="@drawable/category_title_background" >
                    <TextView
                        android:id="@+id/main_screen_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|bottom"
                        android:layout_marginBottom="@dimen/dp16"
                        android:textSize="22sp"
                        android:textColor="@color/title_color"
                        android:textAllCaps="true"
                        tools:text="@string/category_title"/>
                </FrameLayout>
                <android.support.v7.widget.Toolbar
                    android:id="@+id/main_screen_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:padding="0dp"
                    app:contentInsetEnd="0dp"
                    app:contentInsetStart="0dp">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <com.isanechek.wallpaper.view.widgets.AnimatedImageView
                            android:id="@+id/main_screen_ads_info_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|end"
                            android:layout_marginEnd="@dimen/dp16"
                            tools:src="@drawable/ic_error_outline_black_24dp"
                            tools:ignore="ContentDescription" />
                        <com.isanechek.wallpaper.view.widgets.AnimatedTextView
                            android:id="@+id/main_screen_title_toolbar_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="22sp"
                            android:textAllCaps="true"
                            android:textColor="@color/title_color"
                            android:alpha="0"
                            tools:alpha="1"
                            tools:text="@string/category_title"/>
                        <com.isanechek.wallpaper.view.widgets.AnimatedImageView
                            android:id="@+id/main_screen_navigation_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:layout_marginStart="@dimen/dp16"
                            tools:src="@drawable/navigation_closed_24dp"
                            tools:ignore="ContentDescription" />

                    </FrameLayout>
                </android.support.v7.widget.Toolbar>
            </FrameLayout>
        </FrameLayout>
    </android.support.v7.widget.CardView>

    <com.isanechek.wallpaper.view.widgets.navigation.NavigationDrawerView
        android:id="@+id/navView"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header_main" />

</android.support.v4.widget.DrawerLayout>